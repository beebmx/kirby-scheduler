{
    "name": "beebmx/kirby-scheduler",
    "description": "Kirby Scheduler offers a fresh approach to managing scheduled tasks on your server.",
    "license": "MIT",
    "type": "kirby-plugin",
    "version": "1.0.1",
    "keywords": [
        "schedule",
        "scheduler",
        "kirby",
        "kirby-plugin",
        "kirby5"
    ],
    "authors": [
        {
            "name": "Fernando Gutierrez",
            "homepage": "https://beeb.mx"
        }
    ],
	"require": {
        "php": "^8.3",
		"getkirby/composer-installer": "^1.1",
        "dragonmantank/cron-expression": "^3.0",
        "guzzlehttp/guzzle": "^7.10",
        "illuminate/bus": "^12.0",
        "illuminate/cache": "^12.0",
        "illuminate/config": "^12.0",
        "illuminate/console": "^12.0",
        "illuminate/container": "^12.0",
        "illuminate/events": "^12.0",
        "illuminate/filesystem": "^12.0"
	},
    "require-dev": {
        "getkirby/cms": "^5.0",
        "laravel/pint": "^1.0",
        "pestphp/pest": "^4.0",
        "spatie/ray": "^1.0",
        "getkirby/cli": "^1.7",
        "mockery/mockery": "^1.6"
    },
	"config": {
		"allow-plugins": {
            "getkirby/composer-installer": true,
            "pestphp/pest-plugin": true
        }
	},
    "autoload": {
        "psr-4": {
            "Beebmx\\KirbScheduler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "php tests/helpers.php",
            "vendor/bin/pest"
        ]
    },
    "extra": {
        "kirby-cms-path": false,
        "kirby-plugin-path": "tests/Fixtures/site/plugins"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
